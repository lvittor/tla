# Realizar una operacion que involucre el uso de variables y distribuciones en un mismo calculo.
main {

integer n = 10;
float p = 0.5;
integer x = 6;
binomial(n, p, x) dist1;

print("La probabilidad de tirar una moneda 10 veces y sacar cara (o seca) 6 veces exactas es:");
print(dist1);

float mu = 0.0;
float sigma = 1.0;
float target = 0.5;

normal(mu, sigma, target) dist2;

print("La probabilidad de generar un numero aleatorio, siguiendo una distribucion normal estandar, y que sea menor que 0.5 es:");
print(dist2);

integer lambda = 3;
integer occurences = 2;

poisson(lambda, occurences) dist3;

print("La probabilidad de que, en un determinado tiempo dada una frecuencia de 3 veces en el intervalo, hayan exactamente 2 ocurrencias es:");
print(dist3);

}
